<!DOCTYPE html>
<html>
<head>
  <title>Your Cart</title>
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(to right, #ece9e6, #ffffff);
    }

    header {
      background-color: #0d6efd;
      color: white;
      padding: 20px 0;
      text-align: center;
      font-size: 28px;
      font-weight: bold;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .container {
      max-width: 900px;
      margin: 50px auto;
      background-color: #fff;
      border-radius: 10px;
      padding: 30px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    h2 {
      text-align: center;
      color: #333;
      margin-bottom: 25px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      text-align: center;
    }

    th, td {
      padding: 12px;
      border: 1px solid #ccc;
    }

    th {
      background-color: #f5f5f5;
      color: #333;
    }

    .empty-message {
      text-align: center;
      color: #888;
      margin-top: 20px;
    }

    .back-link {
      text-align: center;
      margin-top: 25px;
    }

    .back-link a {
      text-decoration: none;
      color: #0d6efd;
      font-weight: 600;
    }

    .back-link a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>

  <header>üß∫ Your Shopping Cart</header>

  <div class="container">
    <h2>Cart Items</h2>

    <% if (cartItems.length === 0) { %>
      <p class="empty-message">Your cart is empty.</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Quantity</th>
            <th>Price (‚Çπ)</th>
            <th>Total (‚Çπ)</th>
          </tr>
        </thead>
        <tbody>
          <% cartItems.forEach(item => { %>
            <tr>
              <td><%= item.product_id %></td>
              <td><%= item.name %></td>
              <td><%= item.quantity %></td>
              <td><%= item.price %></td>
              <td><%= item.quantity * item.price %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>

    <div class="back-link">
      <a href="/dashboard">‚Üê Back to Dashboard</a>
    </div>
  </div>

</body>
</html>
